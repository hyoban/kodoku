{
  "extends": "@hyoban/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    },
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next",
      },
    ],
    "incremental": true,
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}
